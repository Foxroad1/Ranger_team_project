<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#719E82"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/labelEmployee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/nameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelEmployee"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelEmployeeID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee ID:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/workerIdTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEmployee" />

    <TextView
        android:id="@+id/workerIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Worker_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelEmployeeID"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/labelJobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Title:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/jobTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEmployeeID" />

    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Job_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelJobTitle"
        app:layout_constraintTop_toBottomOf="@+id/workerIdTextView" />

    <TextView
        android:id="@+id/labelWorkTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Work Time:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/clockTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelJobTitle" />

    <TextView
        android:id="@+id/clockTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelWorkTime"
        app:layout_constraintTop_toBottomOf="@+id/jobTitleTextView" />

    <Button
        android:id="@+id/scanQrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="@string/Scan_QR_Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clockTextView" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="@string/Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanQrButton" />

</androidx.constraintlayout.widget.ConstraintLayout>